<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:full_name) %></th>
          <td><%= current_user.user_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
          <td><%= image_tag current_user.avatar_url, class: 'rounded-circle', size: '50x50' %></td>
        </tr>
      </table>
      <div class="d-flex justify-content-between">
        <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success' %>
        <%= link_to 'アカウント削除', user_path(current_user), data: { turbo_method: :delete, turbo_confirm: t('users.destroy.confirm')}, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
