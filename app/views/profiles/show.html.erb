<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="text-center my-5 font-japanese"><%= t('.title') %></h1>
      <table class="table table-bordered rounded" style="background-color: #EBE9DF;">
        <tbody>
          <tr>
            <th scope="row" style="background-color: #EBE9DF;"><%= User.human_attribute_name(:email) %></th>
            <td style="background-color: #EBE9DF;"><%= current_user.email %></td>
          </tr>
          <tr>
            <th scope="row" style="background-color: #EBE9DF;"><%= User.human_attribute_name(:full_name) %></th>
            <td style="background-color: #EBE9DF;"><%= current_user.user_name %></td>
          </tr>
          <tr>
            <th scope="row" style="background-color: #EBE9DF;"><%= User.human_attribute_name(:avatar) %></th>
            <td style="background-color: #EBE9DF;"><%= image_tag current_user.avatar_url, class: 'rounded-circle', size: '50x50' %></td>
          </tr>
        </tbody>
      </table>
      <div class="d-flex justify-content-between mt-4">
        <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success' %>
        <%= link_to 'アカウント削除', user_path(current_user), data: { turbo_method: :delete, turbo_confirm: t('users.destroy.confirm')}, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>