<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h3 class="text-center my-5 font-japanese"><%= t('password_reset.edit.title') %></h3>
      <%= form_with model: @user, url: password_reset_path(@token), class: 'form-group' do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="mb-3 font-japanese">
          <%= f.label :email, class: 'form-label' %>
          <%= f.text_field :email, value: @user.email, class: 'form-control', readonly: true %>
        </div>

        <div class="mb-3 font-japanese">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control', placeholder: '新しいパスワードを入力' %>
        </div>

        <div class="mb-3 font-japanese">
          <%= f.label :password_confirmation, class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワードを再入力' %>
        </div>
        <div class="text-center">
          <%= f.submit 'リセット', class: 'btn-custom' %>
        </div>
      <% end %>
    </div>
  </div>
</div>