<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="text-center my-5 font-japanese"><%= t('contact.title') %></h1>
      <div class="mb=2">
      </div>

      <%= form_with model: @contact, url: confirm_contacts_path, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group font-japanese">
          <%= f.label :name, t('contact.name'), class: 'form-label' %><span class="text-danger">*</span>
          <%= f.text_field :name, autofucus: true, class: 'form-control' %>
        </div>

        <div class="form-group my-3 font-japanese">
          <%= f.label :email, t('contact.email') %><span class="text-danger">*</span>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group my-3 font-japanese">
          <%= f.label :subject, t('contact.subject') %><span class="text-danger">*</span>
          <%= f.text_area :subject, class: 'form-control' %>
        </div>

        <div class="form-group my-3 font-japanese">
          <%= f.label :message, t('contact.message') %><span class="text-danger">*</span>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>

        <div class="text-center mb-3">
          <%= f.submit t('contact.confirm'), class: "btn-custom" %>
        </div>
      <% end %>
    </div>
  </div>
</div>